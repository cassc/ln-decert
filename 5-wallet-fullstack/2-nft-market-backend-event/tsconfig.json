{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "listener",
    "resolveJsonModule": true
  },
  "include": ["listener/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
